# Configuraci√≥n de Backend para Cloud SQL

# Puerto de escucha (Cloud Run usa 8080)
PORT=8080

# Cloud SQL Connection Name (formato: PROJECT_ID:REGION:INSTANCE_NAME)
# Obtener con: gcloud sql instances describe INSTANCE_NAME --format='value(connectionName)'
INSTANCE_CONNECTION_NAME=your-project-id:us-central1:postgresql-instance

# Credenciales de base de datos
DB_USER=postgres
DB_PASS=your-secure-password-here

# Nombre de base de datos
DB_NAME=fichajes_db

# Puerto PostgreSQL (generalmente 5432)
DB_PORT=5432

# Usar IP privada de Cloud SQL (true/false)
# Requiere VPC Connector configurado en Cloud Run
USE_PRIVATE_IP=false

# Entorno Flask (production/development)
FLASK_ENV=production

